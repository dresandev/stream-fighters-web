---
import Layout from "@/layouts/layout.astro"
import CountdownSection from "@/sections/countdown-section.astro"
import HeroSection from "@/sections/hero-section.astro"
import OfficialPresentationSection from "@/sections/official-presentation-section.astro"
import PresentationSection from "@/sections/presentation-section.astro"
import SponsorsSection from "@/sections/sponsors-section.astro"

const title =
  "Stream Fighters 4 – Evento de boxeo creado por WestCol con streamers y creadores de contenido"
const description =
  "El evento de boxeo amateur y música más grande de Latinoamérica, creado y presentado por WestCol. Explora los combates, conoce a los peleadores y haz tus predicciones."
const canonical = "https://streamfighters4.vercel.app/"
---

<Layout title={title} description={description} canonical={canonical}>
  <HeroSection />
  <PresentationSection />
  <CountdownSection />
  <OfficialPresentationSection />
  <SponsorsSection />
</Layout>
